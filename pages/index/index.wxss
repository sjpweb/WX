/**index.wxss**/
.container {
  background: linear-gradient(to bottom, #66ccff 0%,#ffffff 100%);
}
.container swiper {
  width: 94%;
  height: 280rpx;
  margin: auto;
  background-color: #fff;
  border-radius: 8rpx;
}
.container swiper .swiper-item{
  padding: 20rpx;
  line-height: 60rpx;
}
.container swiper .swiper-item .item{
  position: relative;
  font-size: 20rpx;
}
.container swiper .swiper-item .item .carNum{
  font-size: 40rpx;
}
.container swiper .swiper-item .item .van-tag{
  position: absolute;
  top: 13rpx;
  left: 190rpx;
}
.container swiper .swiper-item .item .van-icon{
  font-size: 34rpx;
  position: relative;
  top: 10rpx;
}
.container swiper .addCar{
  text-align: center;
  line-height: 240rpx;
  color: #66ccff;
  font-size: 40rpx;
}
.van-grid{
  width: 94%;
  height: 300rpx;
  box-shadow: 3px 3px 10px rgba(196,231,247,0.5);
  margin: auto;
  margin-top: 30rpx;
  border-radius: 8rpx;
}
.van-grid-item{
  height: 100%;
}
.van-grid-item image{
  width: 70%;
  height: 70%;
}
.recommend{
  width: 94%;
  margin: auto;
  text-align: center;
  background: #ffffff;
}
.recommend text{
  line-height: 100rpx;
}
.recommend image{
  width: 100%;
  height: 200rpx;
  display: block;
}