/**index.wxss**/
.container {
  background: linear-gradient(to bottom, #66ccff 0%,#ffffff 100%);
}
.container swiper {
  width: 94%;
  height: 280rpx;
  margin: auto;
  background-color: #fff;
  border-radius: 8rpx;
}
.container swiper .swiper-item{
  padding: 20rpx;
  line-height: 60rpx;
}
.container swiper .swiper-item .item{
  position: relative;
  font-size: 20rpx;
}
.container swiper .swiper-item .item .van-icon{
  margin-right: 10rpx;
}
.container swiper .swiper-item .item .set{
  float: right;
  color: #66ccff;
}
.container swiper .swiper-item .item .set .van-icon{
  font-size: 24rpx;
  position: relative;
  top: 9rpx;
}
.container swiper .swiper-item .item .carNum{
  font-size: 40rpx;
}
.container swiper .swiper-item .item .van-tag{
  position: absolute;
  top: 13rpx;
  left: 190rpx;
}
.container swiper .swiper-item .item .van-icon{
  font-size: 34rpx;
  position: relative;
  top: 10rpx;
}
.container swiper .addCar{
  text-align: center;
  line-height: 240rpx;
  color: #66ccff;
  font-size: 40rpx;
}
.swiper-container {
  position: relative;
  height: 300rpx;
}
.swiper-container .active {
  transform: scale(1.14);
  transition: all 0.2s ease-in 0s;
  z-index: 20;
}
.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: -10rpx;
  display: flex;
  justify-content: center;
}
.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background-color: #ccc;
  border-radius: 8rpx;
  transition: all 0.6s ease-in-out;
}
.swiper-container .dots .dot.active {
  width: 30rpx;
  background: #fff;
}
.van-grid{
  width: 94%;
  height: 300rpx;
  box-shadow: 3px 3px 10px rgba(196,231,247,0.5);
  margin: auto;
  margin-top: 30rpx;
  border-radius: 8rpx;
}
.van-grid-item{
  height: 100%;
}
.van-grid-item image{
  width: 70%;
  height: 70%;
}
.recommend{
  width: 94%;
  margin: auto;
  text-align: center;
  background: #ffffff;
}
.recommend text{
  line-height: 100rpx;
}
.recommend image{
  width: 100%;
  height: 200rpx;
  display: block;
}