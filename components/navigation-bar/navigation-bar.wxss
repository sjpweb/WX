.nav-bar{ 
  position: fixed;
  width: 100%;
  top: 0;
  color: #fff;
  background: #66ccff;
}
.nav-bar .portrait{ 
  background: #fff; 
  position: absolute; 
  border-radius: 50%; 
  overflow: hidden;
}
.nav-bar .btn{
  background: #fff;
  position: absolute; 
  border-radius: 50%;
  padding: 0 !important;
  font-weight: 400;
  color: #66ccff;
  font-size: 24rpx;
}
.nav-bar .title{
  position: absolute;
  left: 50%;
  transform: translate(-50%,0)
}